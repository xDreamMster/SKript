Options:
	tag: &c&lDream&a&lD&r&aodatki
	blok: ice
	odleglosc: 50	# do usuwania bloku!
	czas: 4			# czas pomiedzy usuwaniem bloków podaj w sekundach
	nazwa: &6&lButy &b&lLodu
	dzwiek: step.snow
